---
// src/pages/register.astro
import MainLayout from '../layouts/MainLayout.astro';
import RegisterForm from '../components/auth/RegisterForm';
---

<MainLayout title="Crear cuenta - Retro Time">
  <div class="register-container">
    <div class="register-form-container">
      <img src="/assets/images/logo.png" alt="Retro Time Logo" class="logo" />
      <h1>Crea tu cuenta</h1>
      <p class="register-subtitle">O <button id="login-trigger" class="text-link">inicia sesión</button> si ya tienes cuenta</p>
      
      <RegisterForm client:load />
      
      <div class="separator">
        <span>O regístrate con</span>
      </div>
      <div class="social-login">
        <a href="/auth/google" class="social-button google-button">
          <i class="fab fa-google"></i>
          Google
        </a>
        <a href="/auth/facebook" class="social-button facebook-button">
          <i class="fab fa-facebook-f"></i>
          Facebook
        </a>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Trigger para abrir el modal de login
    const loginTrigger = document.getElementById('login-trigger');
    if (loginTrigger) {
      loginTrigger.addEventListener('click', () => {
        document.dispatchEvent(new CustomEvent('open-login-modal'));
      });
    }
  });
</script>

<style>
  .register-container {
    min-height: calc(100vh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    background-color: #121212;
  }
  
  .register-form-container {
    background-color: #131b2e;
    border: 1px solid #1c2840;
    border-radius: 8px;
    width: 100%;
    max-width: 800px; /* Aumentado desde 500px */
    padding: 40px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  .logo {
    display: block;
    width: 120px;
    height: auto;
    margin: 0 auto 20px;
  }
  
  h1 {
    color: white;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 10px;
    text-align: center;
  }
  
  .register-subtitle {
    color: #999;
    text-align: center;
    margin-bottom: 30px;
    font-size: 16px;
  }
  
  .text-link {
    color: #a32b26;
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-size: inherit;
  }
  
  .text-link:hover {
    text-decoration: underline;
  }
  
  .register-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 25px;
  }
  
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Dos columnas para campos más anchos */
    gap: 20px;
    margin-bottom: 10px;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-group label {
    color: #ccc;
    margin-bottom: 8px;
    font-size: 14px;
  }
  
  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="password"] {
    padding: 12px;
    background-color: #0a1020;
    border: 1px solid #1c2840;
    border-radius: 4px;
    color: white;
    font-size: 16px;
  }
  
  .form-group input:focus {
    outline: none;
    border-color: #a32b26;
    box-shadow: 0 0 0 1px #a32b26;
  }
  
  .password-requirements {
    font-size: 12px;
    color: #999;
    margin-top: 4px;
  }
  
  .checkbox-group {
    flex-direction: row;
    align-items: flex-start;
    gap: 10px;
  }
  
  .checkbox-group input {
    margin-top: 3px;
  }
  
  .checkbox-group label {
    margin-bottom: 0;
    font-size: 14px;
    color: #ccc;
  }
  
  .register-button {
    background-color: #a32b26;
    color: white;
    padding: 14px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    font-size: 16px;
    margin-top: 6px;
    transition: background-color 0.2s;
  }
  
  .register-button:hover {
    background-color: #8a231f;
  }
  
  .separator {
    display: flex;
    align-items: center;
    margin: 30px 0;
  }
  
  .separator::before,
  .separator::after {
    content: '';
    flex: 1;
    border-bottom: 1px solid #1c2840;
  }
  
  .separator span {
    padding: 0 10px;
    color: #999;
    font-size: 14px;
  }
  
  .social-login {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .social-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }
  
  .social-button:hover {
    opacity: 0.9;
  }
  
  .google-button {
    background-color: #4285F4;
    color: white;
  }
  
  .facebook-button {
    background-color: #1877F2;
    color: white;
  }
  
  .legal-text {
    text-align: center;
    font-size: 12px;
    color: #777;
    margin-top: 20px;
  }
  
  .error-message {
    color: #e74c3c;
    font-size: 13px;
    margin-top: 4px;
  }
  
  @media (max-width: 768px) {
    .register-form-container {
      padding: 30px;
    }
    
    .form-grid {
      grid-template-columns: 1fr; /* Una columna en móvil */
    }
    
    .social-login {
      grid-template-columns: 1fr;
    }
  }
</style>