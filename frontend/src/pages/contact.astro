---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contacto - Retro Time">
  <div class="min-h-[calc(100vh-200px)] py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-xl p-6 md:p-8">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Contáctanos</h1>
          <p class="text-gray-600 text-lg">Estamos aquí para ayudarte</p>
          <div class="w-24 h-1 bg-red-600 mx-auto mt-4"></div>
        </div>

        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Formulario de contacto -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h2>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                    Nombre
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-black"
                    placeholder="Tu nombre"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-black"
                    placeholder="tu@email.com"
                  />
                </div>
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">
                  Asunto
                </label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-black"
                >
                  <option value="">Selecciona un asunto</option>
                  <option value="pedido">Consulta sobre pedido</option>
                  <option value="producto">Información de producto</option>
                  <option value="devolucion">Devolución o cambio</option>
                  <option value="sugerencia">Sugerencia</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <div>
                <label for="order" class="block text-sm font-medium text-gray-700 mb-1">
                  Número de pedido (si aplica)
                </label>
                <input
                  type="text"
                  id="order"
                  name="order"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-black"
                  placeholder="#12345678"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                  Mensaje
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-black"
                  placeholder="Cuéntanos en qué podemos ayudarte..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-red-600 text-white py-3 px-6 rounded-lg hover:bg-red-700 transition-colors font-medium text-black"
              >
                Enviar mensaje
              </button>
            </form>
          </div>

          <!-- Información de contacto -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Información de contacto</h2>
            
            <!-- Horario -->
            <div class="bg-gray-200 rounded-lg p-6 mb-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Horario de atención
              </h3>
              <div class="text-gray-700 space-y-1">
                <p><strong>Lunes a Viernes:</strong> 9:00 - 20:00</p>
                <p><strong>Sábados:</strong> 10:00 - 14:00</p>
                <p><strong>Domingos y festivos:</strong> Cerrado</p>
              </div>
            </div>

            <!-- Métodos de contacto -->
            <div class="space-y-4 mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Email</h4>
                  <p class="text-gray-700">info@retro-time.com</p>
                  <p class="text-sm text-gray-600">Respondemos en menos de 24 horas</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Teléfono</h4>
                  <p class="text-gray-700">+34 91 123 45 67</p>
                  <p class="text-sm text-gray-600">Atención en español</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Oficina</h4>
                  <p class="text-gray-700">Calle Retro 123</p>
                  <p class="text-gray-700">28001 Madrid, España</p>
                  <p class="text-sm text-gray-600">Solo con cita previa</p>
                </div>
              </div>
            </div>

            <!-- Redes sociales -->
            <div class="bg-red-400 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Síguenos en redes</h3>
              <div class="flex space-x-4">
                <a href="#" class="text-gray-600 hover:text-red-600 transition-colors">
