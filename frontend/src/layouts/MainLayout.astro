---
// MainLayout.astro
import Sidebar from '../components/global/Sidebar.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import "../styles/global.css"; //Estilos globales
interface Props {
  title: string;
  showSidebar?: boolean;
}

const { title, showSidebar = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="" /><!-- poner el favicoin -->
    <!-- Font Awesome para Ã­conos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <!-- Estilos globales -->
 
  </head>
  <body>
    <div class="page-wrapper">
      {showSidebar && <Sidebar />}
      
      <div class={`main-content ${showSidebar ? 'with-sidebar' : ''}`}>
        <button id="mobile-menu-toggle" class="mobile-menu-toggle">
          <i class="fas fa-bars"></i>
        </button>
        
        <Header />
        
        <main class="page-content">
          <slot />
        </main>
        
        <Footer />
      </div>
  </div>
    
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #000000;
      color: #ffffff;
      min-height: 100vh;
    }
    
    .page-wrapper {
      display: flex;
      min-height: 100vh;
    }
    
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      transition: margin-left 0.3s ease;
    }
    
    .main-content.with-sidebar {
      margin-left: 260px;
    }
    
    .page-content {
      flex: 1; /* Esto hace que el contenido se expanda */
      padding-bottom: 2rem; /* Espacio para que no choque con el footer */
    }
    
    /* When sidebar is collapsed */
    .main-content.with-sidebar.sidebar-collapsed {
      margin-left: 60px;
    }
    
    .mobile-menu-toggle {
      position: fixed;
      top: 15px;
      left: 15px;
      background-color: #a32b26;
      color: white;
      border: none;
      border-radius: 4px;
      width: 40px;
      height: 40px;
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 900;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
    
    @media (max-width: 768px) {
      .main-content.with-sidebar {
        margin-left: 0;
      }
      
      .mobile-menu-toggle {
        display: flex;
      }
    }
  </style>
    
    <script>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        
        if (mobileMenuToggle && sidebar && sidebarOverlay) {
          mobileMenuToggle.addEventListener('click', () => {
            sidebar.classList.add('mobile-open');
            sidebarOverlay.classList.add('active');
          });
        }
      });
    </script>
  </body>
</html>