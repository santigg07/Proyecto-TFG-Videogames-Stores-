---
// src/components/catalog/CategoryBanner.astro
interface Props {
  title: string;
  description?: string;
  imageUrl?: string;
}

const { 
  title, 
  description = 'Explora nuestra colecci√≥n de videojuegos retro',
  imageUrl = '/assets/images/banners/default-banner.jpg'
} = Astro.props;
---

<div class="relative rounded-lg overflow-hidden bg-gray-900">
  <!-- Imagen de fondo con overlay -->
  <div class="absolute inset-0">
    <!-- MIRA BIEN PARA QUE ES LA IMAGEN -->
    
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-transparent"></div>
  </div>
  
  <!-- Contenido -->
  <div class="relative py-12 px-6 sm:px-12">
    <div class="max-w-3xl">
      <h1 class="text-4xl font-bold text-white mb-4">{title}</h1>
      <p class="text-gray-300 text-lg max-w-2xl">{description}</p>
    </div>
  </div>
</div>